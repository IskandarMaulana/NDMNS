@model NDMNS.Models.Site
@{
    ViewData["Title"] = "Update Site";
    ViewData["Breadcrumb"] = "<li class='breadcrumb-item'><a href='#'>Home</a></li><li class='breadcrumb-item'><a href='#'>Master Data</a></li><li class='breadcrumb-item'><a asp-controller='Site' asp-action='Index'>Site</a></li><li class='breadcrumb-item active'>Update</li>";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="clearfix"></div>

<div class="col-sm-12">
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Update" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.WhatsappGroupName)
        
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control name-number-input" placeholder="Enter Site name" minlength="2" maxlength="100"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Location" class="form-label">Location <span class="text-danger">*</span></label>
                    <input asp-for="Location" class="form-control name-input" placeholder="Enter Site location" minlength="2" maxlength="100"/>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="WhatsappGroup" class="form-label">WhatsApp Group <span class="text-danger">*</span></label>
                    <select asp-for="WhatsappGroup" class="form-select" id="whatsappSelect">
                        <option value="" disabled>-- Choose WhatsApp Group --</option>
                        @if (ViewBag.WhatsAppGroups != null)
                        {
                            @foreach (var group in ViewBag.WhatsAppGroups)
                            {
                                <option value="@group.Id" data-name="@(group.Name ?? "Unknown Group")">
                                    @(group.Name ?? "Unknown Group")
                                </option>
                            }
                        }
                    </select>
                    <span asp-validation-for="WhatsappGroup" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <a asp-controller="Site" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    @if (ViewBag.IsNOC == true || ViewBag.IsTeamLeader == true)
                    {
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save
                        </button>
                    }
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
            
            var originalOptions = $('#whatsappSelect option').clone();
            
            $('input[name="Name"]').on('input', function() {
                var siteName = $(this).val().toLowerCase();
                var select = $('#whatsappSelect');
                
                select.find('option:not(:first)').remove();
                
                if (siteName.length >= 2) {
                    var matchedOptions = [];
                    
                    originalOptions.each(function() {
                        if ($(this).val() !== '' && $(this).data('name')) {
                            var groupName = $(this).data('name').toLowerCase();
                            if (groupName.includes(siteName) || siteName.includes(groupName.split(' ')[0])) {
                                matchedOptions.push($(this).clone());
                            }
                        }
                    });
                    
                    if (matchedOptions.length > 0) {
                        matchedOptions.forEach(function(option) {
                            select.append(option);
                        });
                    } else {
                        originalOptions.each(function() {
                            if ($(this).val() !== '') {
                                select.append($(this).clone());
                            }
                        });
                    }
                } else {
                    originalOptions.each(function() {
                        if ($(this).val() !== '') {
                            select.append($(this).clone());
                        }
                    });
                }
            });
        });
    </script>
}